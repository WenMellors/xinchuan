<!DOCTYPE html>
<html>
<head>
  <title>信息传媒部平台</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0">
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
	<!-- # 导航栏 -->
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
  	<a class="navbar-brand" href="/">主页</a>
  	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
    	<span class="navbar-toggler-icon"></span>
  	</button>
  	<div class="collapse navbar-collapse" id="navbarColor03">
    	<ul class="navbar-nav mr-auto">
      	<% if current_user.admin? %>
      	<li class="nav-item">
        	<a class="nav-link" href="/activities/new">新建活动</a>
      	</li>
      	<li class="nav-item">
        	<a class="nav-link" href="/reasons">查看请假原因</a>
      	</li>
      	<li class="nav-item">
        	<a class="nav-link" href="/appointments">查看所有预约</a>
      	</li>
      	<% end %>
      	<li class="nav-item">
        	<a class="nav-link" href="/users/edit">修改密码</a>
      	</li>
    	</ul>
  	</div>
	</nav>
<% end %>
  <input type = "hidden" id="user" value="<%= notice %>">
  <input type = "hidden" id="log" value="<%= alert %>">
<%= yield %>
</body>
</html>
