<!DOCTYPE html>
<html>
<head>
  <title>信息传媒部请假平台</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0">
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <%= link_to('退出登录', destroy_user_session_path, :method => :delete) %> |
    <%= link_to('修改密码', edit_registration_path(:user)) %>
  <% else %>
    <%= link_to('注册', new_registration_path(:user)) %> |
    <%= link_to('登录', new_session_path(:user)) %>
<% end %>
  <input type = "hidden" id="user" value="<%= notice %>">
  <input type = "hidden" id="log" value="<%= alert %>">
<%= yield %>
</body>
</html>
