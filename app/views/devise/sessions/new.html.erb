
<div class="main">
  <div class="ui center aligned container">
    <p style="font-size:40px;font-family:times">Welcome!</p>
  </div>
  <br/>
  <br/>
  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="ui form">
        <div class="thirteen wide field" style="position:relative;left:12%">
          <%= f.label :电子邮箱 %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="thirteen wide field" style="position:relative;left:12%">
          <%= f.label :密码 %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div><br>
      <% if devise_mapping.rememberable? -%>
      <div class="field" style="position:relative;left:12%">
        <%= f.check_box :remember_me %>
        <%= f.label :记住我 %>
      </div>
      <% end -%>

    <button class="ui teal button" type="submit" style="font-size:14px;position:relative; left: 75%">
      登录
    </button>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
